{
  "name": "recipe-acceptor",
  "scripts": {
    "lint": "bash ./script/lint",
    "test": "bash ./script/test",
    "bundle": "rollup --config rollup.config.js",
    "minify": "terser -mc -o ./build/acceptor.min.js -- ./build/acceptor.bundle.js",
    "build": "tsc --build tsconfig.json",
    "package": "yarn build && yarn bundle && yarn minify"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "2",
    "@typescript-eslint/parser": "^2.23.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.19",
    "ava": "^3.5.0",
    "eslint": "6",
    "eslint-config-standard-with-typescript": "^14.0.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "9",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "nyc": "^15.0.0",
    "rollup": "^2.2.0",
    "terser": "^4.6.7",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@types/async": "^3.0.8",
    "@types/js-yaml": "^3.12.2",
    "@types/lodash": "^4.14.149",
    "async": "^3.2.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "worker-farm": "^1.7.0"
  }
